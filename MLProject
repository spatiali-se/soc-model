name: soc-model

docker_env:
  image: mlflow-docker

entry_points:
  main:
    parameters:
      train_ratio: { type: float, default: 0.7 }
      test_ratio: { type: float, default: 0.15 }
      data: { type: string, default: "lucas_2015.parquet" }
      preprocess: { type: bool, default: true }
      plot: { type: bool, default: false }
      print_metrics: { type: bool, default: false }
    command: "python main.py --train_ratio {train_ratio} --test_ratio {test_ratio} --data {data} --preprocess {preprocess} --plot {plot} --print_metrics {print_metrics}"
